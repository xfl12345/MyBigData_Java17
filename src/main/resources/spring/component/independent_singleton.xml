<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd">
    <!-- 默认时区 为 中国标准时间 所使用的时区 -->
    <bean id="defaultTimeZone" class="java.util.SimpleTimeZone">
        <constructor-arg name="rawOffset" value="28800000"/>
        <constructor-arg name="ID" value="China Standard Time"/>
    </bean>
    <!-- 格式化时间为 年-月-日 小时:分钟:秒   -->
    <bean id="defaultDateFormat" class="java.text.SimpleDateFormat">
        <constructor-arg name="pattern" value="yyyy-MM-dd HH:mm:ss"/>
    </bean>
    <!-- 单独提取时间里的 毫秒（3位数）   -->
    <bean id="millisecondFormatter" class="java.text.SimpleDateFormat">
        <constructor-arg name="pattern" value="SSS"/>
    </bean>
    <!-- 时间格式化输出的豪华规格，格式化时间为 年-月-日 小时:分钟:秒.毫秒  -->
    <bean id="fullDateFormat" class="java.text.SimpleDateFormat">
        <constructor-arg name="pattern" value="yyyy-MM-dd HH:mm:ss.SSS"/>
    </bean>
</beans>
